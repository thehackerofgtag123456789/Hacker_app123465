<script>
const terminal = document.getElementById("terminal");
const inputBox = document.getElementById("hiddenInput");

let presses = 0;
let unlocked = false;

/* keep keyboard open */
function focusInput() {
  inputBox.focus();
}
focusInput();

/* -------- TERMINAL INPUT -------- */
inputBox.addEventListener("input", () => {
  if (unlocked) return;

  presses++;
  terminal.innerHTML += "\n> " + fakeCommand();
  inputBox.value = "";

  terminal.scrollTop = terminal.scrollHeight;

  if (presses >= 18) {
    unlocked = true;
    setTimeout(accessGranted, 800);
  }
});

function fakeCommand() {
  const cmds = [
    "scanning ports...",
    "injecting payload...",
    "decrypting packets...",
    "bypassing firewall...",
    "routing proxy...",
    "spoofing address...",
    "loading exploit..."
  ];
  return cmds[Math.floor(Math.random() * cmds.length)];
}

/* -------- ACCESS GRANTED -------- */
function accessGranted() {
  terminal.innerHTML += "\n\nACCESS GRANTED âœ”";
  terminal.innerHTML += "\nLaunching interface...";
  setTimeout(startMatrix, 1200);
}

/* -------- MATRIX EFFECT -------- */
function startMatrix() {
  terminal.style.display = "none";
  document.getElementById("matrix").style.display = "block";

  const canvas = document.getElementById("canvas");
  const ctx = canvas.getContext("2d");

  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;

  const chars = "01";
  const fontSize = 16;
  const columns = Math.floor(canvas.width / fontSize);
  const drops = Array(columns).fill(1);

  setInterval(() => {
    ctx.fillStyle = "rgba(0,0,0,0.05)";
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    ctx.fillStyle = "#00ff00";
    ctx.font = fontSize + "px monospace";

    for (let i = 0; i < drops.length; i++) {
      const text = chars[Math.floor(Math.random() * chars.length)];
      ctx.fillText(text, i * fontSize, drops[i] * fontSize);

      if (drops[i] * fontSize > canvas.height && Math.random() > 0.96) {
        drops[i] = 0;
      }
      drops[i]++;
    }
  }, 33);

  setTimeout(startMinigame, 4000);
}

/* -------- MINIGAME -------- */
function startMinigame() {
  document.body.innerHTML = `
    <input id="hiddenInput" type="text" autofocus>
    <div id="terminal">
TARGET NODE LOCKED ðŸ”’

ENTER 4-DIGIT ACCESS CODE
    </div>
  `;

  const terminal = document.getElementById("terminal");
  const inputBox = document.getElementById("hiddenInput");
  inputBox.focus();

  const code = Math.floor(1000 + Math.random() * 9000).toString();
  let entered = "";

  inputBox.addEventListener("input", () => {
    const val = inputBox.value.replace(/\\D/g, "");
    inputBox.value = "";

    entered += val;
    terminal.innerHTML += val;

    if (entered.length >= 4) {
      if (entered === code) {
        terminal.innerHTML += "\n\nSYSTEM BREACHED âœ”";
      } else {
        terminal.innerHTML += "\n\nACCESS DENIED âœ–\nTRY AGAIN\n";
        entered = "";
      }
    }
  });
}
</script>

